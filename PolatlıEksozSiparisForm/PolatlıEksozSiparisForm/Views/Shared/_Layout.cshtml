<script type="text/javascript">
    $(document).ready(function () {
        $("#Adi").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Home/Arama",
                    type: "POST",
                    dataType: "json",
                    data: { text: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Adi, value: item.ID };
                        }))
                    }
                })
            },
            select: function (event, ui) {
                window.location.href = "/Alisveris/Index?text=" + ui.item.label;
            }
        });
    });

    function btnSerachClick() {
        window.location.href = "/Alisveris/Index?text=" + $("#Adi").val();
    }
</script>