<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Giriş</h2>
                    <form action="/Login/LoginPost" method="post" id="form">
                        <div class="group-input">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-user", type = "email",
                           placeholder = "E-mail adresiniz giriniz..."})
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                        <div class="group-input">
                            @Html.TextBoxFor(x => x.Sifre, new {@class = "form-control form-control-user", type= "password",
                           placeholder = "Şifre"})
                            @Html.ValidationMessageFor(x => x.Sifre)



                        </div>
                        <div class="group-input gi-check">
                            @* <div class="gi-more">
                                    <label for="save-pass">
                                        Şifre Kaydedilsin mi?
                                        <input type="checkbox" id="save-pass">
                                        <span class="checkmark"></span>
                                    </label>
                                    <a href="#" class="forget-pass">Şifremi Unuttum</a>
                                </div> *@
                        </div>
                        <button type="submit" class="site-btn login-btn">Giriş Yap</button>
                    </form>
                    <div class="switch-login">
                        <a href="/Login/Register" class="or-login">Veya Hesap Oluştur.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

