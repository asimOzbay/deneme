
@using PolatlıEksozSiparisForm.Models.VMs

@{
    ViewBag.Title = "Register";
}
@model userVM
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="/Home/Index"><i class="fa fa-home"></i>Anasayfa</a>
                    <span>Kaydol</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Hesap Oluştur</h2>
                    <form action="/Login/RegisterPost" method="post">
                        <div class="group-input">
                            <label for="Adi">Ad *</label>
                            <input type="text" id="Adi" name="Adi">
                        </div>
                        <div class="group-input">
                            <label for="Soyadi">Soyad *</label>
                            <input type="text" id="Soyadi" name="Soyadi">
                        </div>
                        <div class="group-input">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-user", type = "email",
                           placeholder = "E-mail adresiniz giriniz..."})
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>

                        <div class="group-input">
                            @Html.TextBoxFor(x => x.Sifre, new {@class = "form-control form-control-user", type= "password",
                          placeholder = "Şifre"})
                            @Html.ValidationMessageFor(x => x.Sifre)
                        </div>
                        <div class="group-input">
                            <label for="con-pass">Şifre Tekrarı *</label>
                            <input type="password" id="SifreTekrari" name="SifreTekrari">
                        </div>
                        <button type="submit" class="site-btn register-btn">KAYDOL</button>
                    </form>
                    <div class="switch-login">
                        <a href="/Login/Index" class="or-login">Veya Giriş Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->
